{
    "gitbook": ">=3.0.0-pre.11",
    "title": "Інтерактивний підручник для вчителів початкових класів",
    "plugins": ["-search", "fontsettings", "sharing", "addcssjs", "quiz", "disqus", "-mathjax", "-comments"],
    "pluginsConfig": {
        "theme-default": {
            "showLevel": true
        },
        "sharing": {
            "facebook": true,
            "twitter": true,
            "google": true,
            "weibo": false,
            "instapaper": false,
            "vk": false,
            "all": []
        },
        "addcssjs": {
            "css": [
                "custom/css/style.css", "custom/css/Bootstrap.css"
            ],
            "js": [
                "vendor/js/jquery/jquery-2.1.3.min.js", "vendor/js/underscore/underscore.js", "custom/js/popup.js", "custom/js/custom.js", "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-56b867cbd424efa0", "custom/js/Bootstrap.js"
            ]
        },
        "disqus": {
            "shortName": "ederabooks"
        },        
        "quiz": {
            "labels": {
                "showCorrect" : "Показати правильну відповідь",
                "showExplanation"   : "Пояснення",
                "check"       : "Перевірити"
            },
            "text": {
                "noChosen"    : "Не вибрано жодної відповіді",
                "rightAnswer" : "Правильно!",
                "wrongAnswer" : "Неправильно!",
                "incomplete" : "Вибрані не всі правильні відповіді"
            }
        }
    },
    "variables": {
      "basePath": "https://edera.gitbooks.io/glossary/"
    },
    "links": {
        "gitbook": false,
        "sidebar": {
          "Зв'язатися з нами: info@ed-era.com": "mailto:info@ed-era.com",
                    "Перейти до бібліотеки EdEra": "https://www.ed-era.com/books"
        }
    }
}
